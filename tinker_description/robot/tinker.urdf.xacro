<?xml version="1.0"?>
<robot xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
       xmlns:xacro="http://ros.org/wiki/xacro"
       name="tinker">

    <xacro:include filename="$(find pr2_description)/urdf/common.xacro"/>
    <xacro:include filename="$(find tinker_description)/urdf/materials.xacro"/>

    <xacro:include filename="$(find tinker_description)/urdf/base/base.urdf.xacro"/>
    <xacro:include filename="$(find tinker_description)/urdf/body/body.urdf.xacro"/>
    <xacro:include filename="$(find tinker_description)/urdf/arm/arm.urdf.xacro"/>
    <link name="virtual_x_link"/>
    <joint name="virtual_x_joint" type="prismatic">
        <parent link="virtual_x_link" />
        <child link="virtual_y_link" />
        <origin rpy="0 0 0" />
        <limit lower="-1" upper="1" velocity="0.2" effort="10000"/>
    </joint>
    <link name="virtual_y_link"/>
    <joint name="virtual_y_joint" type="prismatic">
        <parent link="virtual_y_link" />
        <child link="virtual_yaw_link" />
        <origin rpy="0 0 0" />
        <axis xyz="0 1 0" />
        <limit lower="-1" upper="1" velocity="0.2" effort="10000"/>
    </joint>
    <link name="virtual_yaw_link"/>
    <joint name="virtual_yaw_joint" type="continuous">
        <parent link="virtual_yaw_link" />
        <child link="base_link" />
        <origin rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <limit velocity="0.2" effort="10000"/>
    </joint>
</robot>
